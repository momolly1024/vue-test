$font = '標楷體'
$bg1 =  url('../assets/0401.jpg')
$bg2 = url('../assets/0402.jpg')
#app
  width 1024px
  height 768px
  margin auto
#Top
  background-image $bg1
  width 1024px
  height 120px
  color #fff
  text-align center
  font-family '標楷體'
  font-size 52px
  text-shadow 10px 10px 15px #333333
  line-height 120px

#Marquee
  font-family $font
  width 100%
  height 30px
  line-height 30px
  background-image $bg2
  color #0000ff
  font-size 19px
#Content
  background-image $bg2
  table
    margin auto
  tr
    height 150px
  td
    vertical-align middle
    text-align center
    &:first-child
      width 200px
    &:not(:first-child)
      width 300px
    img 
      height 150px
#Footer
  color #ffffff
  text-align center
  background-color green